<h1>AjaxApp</h1>
  <%= form_with url: "/posts", method: :post,id: "form" do |form| %>
  <%= form.text_field :content , id: "content" %>
  <%= form.submit '投稿する' , id: "submit" %>
<% end %>

<%# 「投稿する」ボタンの情報を取得 %>
<div id="list">
</div>
<% @posts.each do |post| %>
<%# data-idとdata-checkのカスタムデータ属性を追加 前者はメモのidが入り、後者は既読の有無を管理するcheckedカラムの情報 %>
  <div class="post" data-id=<%= post.id %> data-check=<%= post.checked %>>
    <div class="post-date">
      投稿日時：<%= post.created_at %>
    </div>
    <div class="post-content">
      <%= post.content %>
    </div>
  </div>
<% end %>
